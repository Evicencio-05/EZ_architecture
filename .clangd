---
If:
  PathMatch: .*
  PathExclude: ["external/", "build/", "examples/", "CMakeLists.txt", "*.cmake"]
Index:
  Background: Build
  StandardLibrary: true

Diagnostics:
  Suppress:
    - unused-parameter
    - unused-variable

CompileFlags:
  CompilationDatabase: build
  # Remove:
  # - -fcolor-diagnostics
  # - -fno-color-diagnostics

Hover:
  ShowAKA: true
