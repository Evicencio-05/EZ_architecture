If:
  PathMatch: ".*"
  # PathExclude should be a list of strings following YAML list notation.
  PathExclude:
    # Exclude directories
    - "external/.*" 
    - "build/.*"
    - "examples/.*"
    - "CMakeLists.txt"
    - "^.*\\.cmake$"

Index:
  Background: Build
  StandardLibrary: true

Diagnostics:
  Suppress:
    - unused-parameter
    - unused-variable

CompileFlags:
  CompilationDatabase: "build"
  # Remove:
  #   - -fcolor-diagnostics
  #   - -fno-color-diagnostics


Hover:
  ShowAKA: true
